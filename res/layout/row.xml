<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="10dp" android:background="#fff">
<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingBottom="5dp"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bobby" android:id="@+id/rowName" android:typeface="serif" android:textStyle="bold" android:textColor="#000" android:layout_weight="0"></TextView><TextView android:layout_height="wrap_content" android:text="10 minutes ago" android:id="@+id/rowTime" android:layout_width="fill_parent" android:gravity="right" android:typeface="serif" android:textStyle="italic" android:textColor="#000" android:layout_weight="1"></TextView></LinearLayout>

<TextView android:layout_height="wrap_content" android:text="The latest status message" android:id="@+id/rowStatus" android:layout_width="fill_parent" android:textColor="#000" android:autoLink="all"></TextView>


</LinearLayout>
